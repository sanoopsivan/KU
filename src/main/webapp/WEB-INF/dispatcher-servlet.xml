<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<context:property-placeholder location="classpath:database.properties" />
	<context:component-scan base-package="com.bas.KU.controller" />


	<!-- declare beans -->
	<bean id="userDAO" class="com.bas.KU.dao.UserDAOImpl" />
	<bean id="userService" class="com.bas.KU.services.UserServiceImpl" />
	<bean id="adminDAO" class="com.bas.KU.dao.AdminDAOImpl" />
	<bean id="adminService" class="com.bas.KU.services.AdminServiceImpl" />


	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/WEB-INF/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${KU.database.jdbc.driver}" />
		<property name="url" value="${KU.database.jdbc.url}" />
		<property name="username" value="${KU.database.jdbc.username}" />
		<property name="password" value="${KU.database.jdbc.password}" />
	</bean>
</beans>